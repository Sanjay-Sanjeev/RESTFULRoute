<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" method="POST" action="/blogs">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title of Blog" required>
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL" required>
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required></textarea>
        </div>
        <input class="ui inverted green button" type="Submit">
    </form>
</div>



